# http://editorconfig.org
root = true

[*.{py}]
indent_style = space
indent_size = 4
charset = utf-8

# Python script without an extensions
[*ctl]
indent_style = space
indent_size = 4
charset = utf-8

[*.{yaml,yml,yml.example,yaml.example}]
indent_style = space
indent_size = 2
charset = utf-8

[*.rst]
trim_trailing_whitespace = false
